<% layout('layouts/new') %>

<form action="" method="" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username"><%=user.username %> </label>
        <input class="form-control" type="text" id="username" name="username" required autofocus>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label" for="number">Phone Number</label>
        <input class="form-control" type="number" id="number" name="number" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>










